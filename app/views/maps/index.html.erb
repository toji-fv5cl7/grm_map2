<div class="col-6 mx-auto">
  <%= p @maps %>
  <% @maps.each do |map| %>
    <div class="card mb-5">
      <%= link_to map do %>
        <!-- image_magickのメソッドを使用して画像サイズを変更して表示 -->
        <% if map.image.attached? %>
          <%= image_tag map.image.variant(resize_to_fill: [800, 800]).processed, class: "card-img" %>
        <% else %>
          <%= image_tag "no_image", class: "card-img" %>
        <% end %>
      <% end %>
      <div class="card-text">
        <p><%= truncate(map.caption, length: 90) %></p>
      </div>
    </div>
  <% end %>
</div>